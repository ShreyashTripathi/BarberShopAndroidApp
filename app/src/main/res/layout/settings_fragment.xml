<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:fillViewport="true"
    tools:context=".ui.settings.SettingsFragment"
    android:paddingHorizontal="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:background="@drawable/layout_shape">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="30dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/model2"
                android:layout_alignParentStart="true"
                android:id="@+id/profile_pic_setting"
                android:layout_centerVertical="true"
                android:background="@drawable/round_img_shape"
                app:civ_border_width="2dp"
                app:civ_border_color="#ffffff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Name of the person"
                android:textSize="20sp"
                android:layout_toEndOf="@id/profile_pic_setting"
                android:layout_marginHorizontal="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/profile_name_setting"
                android:textColor="#ffffff"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_create_24"
                android:layout_toEndOf="@id/profile_name_setting"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/drop_down_icon_setting"
                />
        </RelativeLayout>
            <ProgressBar
                android:id="@+id/progressBarSetting"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:indeterminate="true"
                android:visibility="invisible"
                />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_list_view"
            android:orientation="vertical"
            android:layout_marginVertical="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Log out"
            android:id="@+id/log_out"
            android:layout_marginTop="50dp"
            />


    </LinearLayout>


</ScrollView>